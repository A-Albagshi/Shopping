@{
    ProductModel product = (ProductModel) @ViewData["Product"];
}



@{
    if (product != null)
    {
        <table class="table table-striped" style="color: red">
        <tr>
         <td>Id</td>
         <td>Name</td>
         <td>Price</td>
         <td>Image</td>
         </tr>
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td><img src=@product.Image width="100" height="100"/></td>
        </tr>
        </table>
    }

    else
    {
        <h1>Error 404</h1>
    }
}
