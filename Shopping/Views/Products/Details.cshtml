@{
    ViewData["Title"] = "Product Details";
    ProductModel product = (ProductModel) @ViewData["Product"];
}
<style>
    td,th{
        text-align: center;
        vertical-align: middle !important;
        font-weight: bold;
    }
</style>


<table class="table table-striped table-hover">
        <tr>
         <th>Id</th>
         <th>Name</th>
         <th>Price</th>
         <th>Image</th>
         </tr>
@{
    if (product != null)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td><img src=@product.Image width="100" height="100"/></td>
        </tr>
        
    }

    else
    {
        <h1>Error 404</h1>
    }
}
</table>