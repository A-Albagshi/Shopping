@{
    ViewData["Title"] = "Random Product";
    ProductModel product = (ProductModel) @ViewData["Product"];
}
<style>
    td,th{
        text-align: center;
        vertical-align: middle !important;
        font-weight: bold;
    }
</style>


<table class="table table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Image</th>
        <th>Go To</th>
    </tr>
    <tr>
        <td>@product.Id</td>
        <td>@product.Name</td>
        <td>@product.Price</td>
        <td>
            <img src=@product.Image width="100" height="100"/>
        </td>
        <td>
            <input type="button" class="btn btn-primary" onclick="location.href='/products/details/@product.Id';" value="@product.Name Details"/>
        </td>

    </tr>
</table>